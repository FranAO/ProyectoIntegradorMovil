<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/glass_background"
    android:padding="24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/headerIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#8D0743"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_star_filled"
            android:scaleType="centerInside"
            app:tint="#FFFFFD" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="¿Cómo fue tu viaje?"
        android:textAlignment="center"
        android:textColor="#8D0743"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerIcon" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Tu opinión nos ayuda a mejorar"
        android:textAlignment="center"
        android:textColor="#9CADBA"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#20000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle" />

    <TextView
        android:id="@+id/tvRatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Califica al conductor"
        android:textColor="#8D0743"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <LinearLayout
        android:id="@+id/ratingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRatingLabel">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_outline"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="#9CADBA"
            android:tag="1" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_outline"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="#9CADBA"
            android:tag="2" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_outline"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="#9CADBA"
            android:tag="3" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_outline"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="#9CADBA"
            android:tag="4" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_outline"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="#9CADBA"
            android:tag="5" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvRatingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Selecciona una calificación"
        android:textColor="#9CADBA"
        android:textSize="13sp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingContainer" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#20000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRatingText" />

    <TextView
        android:id="@+id/tvCommentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Comentarios (opcional)"
        android:textColor="#8D0743"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <LinearLayout
        android:id="@+id/commentContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@drawable/input_field_bg"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCommentLabel">

        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@null"
            android:gravity="top|start"
            android:hint="Cuéntanos sobre tu experiencia..."
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="6"
            android:scrollbars="vertical"
            android:textColor="#8D0743"
            android:textColorHint="#9CADBA"
            android:textSize="15sp"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentContainer">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:text="OMITIR"
            android:textColor="#9CADBA"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.08"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="24dp"
            app:strokeColor="#9CADBA"
            app:strokeWidth="2dp"
            app:rippleColor="#20000000" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/premium_button_bg"
                android:elevation="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="ENVIAR"
                android:textColor="#FFFFFD"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.08"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                app:backgroundTint="@null"
                app:cornerRadius="24dp"
                app:rippleColor="#40FFFFFF"
                app:icon="@drawable/confirmar"
                app:iconTint="#FFFFFD"
                app:iconSize="18dp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
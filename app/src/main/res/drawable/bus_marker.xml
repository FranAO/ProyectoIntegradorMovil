<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#40000000"/>
            <size
                android:width="48dp"
                android:height="48dp"/>
        </shape>
    </item>
    
    <!-- Outer circle with gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#8D0743"
                android:endColor="#6D0533"
                android:angle="135"
                android:type="linear"/>
            <size
                android:width="44dp"
                android:height="44dp"/>
        </shape>
    </item>
    
    <!-- Inner white ring -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <size
                android:width="38dp"
                android:height="38dp"/>
        </shape>
    </item>
    
    <!-- Inner colored circle -->
    <item
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#8D0743"
                android:centerColor="#B31D5A"
                android:endColor="#8D0743"
                android:type="radial"
                android:gradientRadius="20dp"/>
            <size
                android:width="32dp"
                android:height="32dp"/>
        </shape>
    </item>
    
    <!-- Pulse effect (optional, for animation) -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#40FFFFFF"/>
            <size
                android:width="36dp"
                android:height="36dp"/>
        </shape>
    </item>
</layer-list>
